<%- include ('../partials/header') -%>

<div class="container" id="show-container">
  <div class="row">
    <div class="col-md-7">
      <div class="thumbnail">
        <img class="img-fluid" src="<%= location.image %>" alt="" />
        <div class="caption-full">
          <h3><a href=""><%= location.name %></a></h3>
          <h6 id="restaurant-type"><%= location.restaurantType %>&nbsp - &nbsp<%= location.foodType %></h6>
          <hr>
          <% if((location.website) || (location.menu) || (location.yelp)) { %>
          <% if(location.website) { %>
          <li class="link-list web-links">
            <i class="fas fa-globe"></i>
            <strong>&nbsp Website</strong
            ><a href="<%= location.website %>"> - <%= location.website %></a>
          </li>
          <% } %> <% if(location.menu) { %>
          <li class="link-list web-links">
            <i class="fas fa-utensils circle-icon"></i>
            <strong>&nbsp &nbspMenu</strong>
            <a href="<%= location.menu %>"> - <%= location.menu %></a>
          </li>
          <% } %> <% if(location.yelp) { %>
          <li class="link-list web-links">
            <i class="fab fa-yelp circle-icon"></i>
            <strong>&nbsp &nbspYelp</strong>
            <a href="<%= location.yelp %>"> - <%= location.yelp %></a>
          </li>
          <hr>
          <% } %> <% } %>
        </div>

        <p><%= location.description %></p>
      </div>
    </div>
    <div class="col-md-4">
      <p class="lead">Info</p>
      <div class="list-group">
        <li class="list-group-item info-list">
          <i class="fas fa-map-signs"></i>
          <p><%= location.neighborhood %></p>
        </li>
        <li class="list-group-item info-list">
          <i class="fas fa-map-marker-alt"></i>

          <p class="address-show">
            <%= location.address.street %><br />
            <%= location.address.city %>&nbsp<%= location.address.state
            %>,&nbsp<%= location.address.zip %>
          </p>
        </li>
        <li class="list-group-item info-list">
          <i class="fas fa-phone"></i>
          <p><%= location.phoneNumber %></p>
        </li>
      </div>
      <p class="lead">Keto Options</p>
      <div class="list-group">
        <li class="list-group-item">Option 1</li>
        <li class="list-group-item">Option 2</li>
        <li class="list-group-item">Option 3</li>
      </div>
    </div>
  </div>

</div>

<%- include ('../partials/footer') -%>

