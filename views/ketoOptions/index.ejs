<%- include ('../partials/header') -%>

<header class="jumbotron">
    <div class="container text-right">
        <h1 class="font-weight-bold">Keto Options</h1>
        <p class="text-muted">View keto friendly menu options from our locations in and around Seattle</p>
        <br>
    </div>
</header>


<div class="container">
    <div class="row no-gutters">
        <% ketoOptions.forEach(function(ketoOption) { %>
        <div class="col-md-4 mb-3">
            <div class="card-body">
                <div class="">
                    <img
                        src="<%= ketoOption.image %>"
                        class="img-fluid z-depth-5"
                    />
                </div>
                <div class="mt-3">
                    <div class="text-center">
                        <h5 class="card-title raleway font-weight-bold mb-0"><%= ketoOption.name %></h5>
                        <a href="/locations/<%= ketoOption.location.id %>"><p class="font-weight-bold name-price-carbs-index"><%= ketoOption.location.name %></p></a><br>                            
                    </div>
                    <div class="text-center mt-2 mb-2" id="keto-desc">
                        <p class="text-muted">
                                <%= ketoOption.description %>
                        </p><br>   
                    </div>
                    <div class="text-center name-price-carbs-index">
                            <p class="mr-xl-0"><span class="font-weight-bold raleway">Price:</span> &nbsp<%= ketoOption.price%></p><br>
                            <p class="ml-xl-0"><span class="font-weight-bold raleway">Carbs:</span> &nbsp<%= ketoOption.carbs %></p>         
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

                <!-- pagination -->
                <div class="container mt-4">

                        <nav aria-label="Page navigation">
                                <% if (pages && pages > 0) { %>
                                <ul class="pagination justify-content-center">
                                    <% if (current == 1) { %>
                                    <li class="page-item disabled"><a class="page-link">First</a></li>
                                    <% } else { %>
                                    <li><a class="page-link" href="/keto-options">First</a></li>
                                    <% } %>
                             
                                    <% if (current == 1) { %>
                                    <li class="page-item disabled"><a class="page-link">«</a></li>
                                    <% } else { %>
                                    <li><a class="page-link" href="/keto-options?page=<%= Number(current) - 1 %>">«</a></li>
                                    <% } %>
                             
                                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                    <% if (i !== 1) { %>
                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                    <% } %>
                                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if (i == current) { %>
                                    <li class="active"><a class="page-link"><%= i %></a></li>
                                    <% } else { %>
                                    <li><a class="page-link" href="/keto-options?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                    <% } %>
                                    <% } %>
                             
                                    <% if (current == pages) { %>
                                    <li class="page-item disabled"><a class="page-link">»</a></li>
                                    <% } else { %>
                                    <li><a class="page-link" href="/keto-options?page=<%= Number(current) + 1 %>">»</a></li>
                                    <% } %>
                             
                                    <% if (current == pages) { %>
                                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                                    <% } else { %>
                                    <li><a class="page-link" href="/keto-options?page=<%= pages %>">Last</a></li>
                                    <% } %>
                                </ul>
                                <% } %>
                            </nav>    
                        </div>
        


 











<%- include ('../partials/footer') -%>
