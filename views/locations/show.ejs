<%- include ('../partials/header') -%>

<div class="container" id="show-container">
        <div class="row">
            <div class="col-md-7">
                <div class="thumbnail">
                    <img class="img-fluid" src="<%= location.image %>" alt="">
                    <div class="caption-full">
                        <h3><a href=""><%= location.name %></a></h3><h6 id="restaurant-type"> - <%= location.restaurantType %></h6>
                        <% if((location.website) || (location.menu) || (location.yelp)) { %>
                            <% if(location.website) { %>
                            <li class="link-list">
                                <img src="/images/browser.png"/>
                                <strong>&nbsp Website</strong><a href="<%= location.website %>"> - <%= location.website %></a>
                            </li>
                            <% } %>
                            <% if(location.menu) { %>
                            <li class="link-list">
                                <i class="fas fa-utensils"></i>
                                <strong>&nbsp Menu</strong> <a href="<%= location.menu %>"> - <%= location.menu %></a>
                            </li>
                            <% } %>
                            <% if(location.yelp) { %>
                            <li class="link-list">
                                <i class="fab fa-yelp"></i>
                                <strong>&nbsp Yelp</strong> <a href="<%= location.yelp %>"> - <%= location.yelp %></a>
                            </li>
                            <% } %>
                        <% } %>
        
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                </div>
    
        </div>
    </div>






<%- include ('../partials/footer') -%>
