<%- include ('../partials/header') -%>

<div class="container w-75 mt-5">
  <h3 class="raleway font-weight-bold mb-3">
    Edit Comment
  </h3>

  <form action="/locations/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <textarea
        class="form-control form-control-sm"
        cols="55"
        rows="3"
        name="comment[text]"
        value="<%= comment.text %>"
        required
      ><%= comment.text %></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-md btn-default btn-block btn-dark mt-4">
        Submit
      </button>
    </div>
  </form>
  <a class="font-weight-bold" href="/locations">Back</a>
</div>

<%- include ('../partials/footer') -%>
