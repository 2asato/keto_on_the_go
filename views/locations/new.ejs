<%- include ('../partials/header') -%>

<div class="container" id="new-location-form">
    <h1>Add A New Location</h1>
    <form action="/locations" method="POST">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Name</label>
                <input type="text" class="form-control" placeholder="Name" name="location[name]">
            </div>
            <div class="form-group col-md-6">
                <label for="">Image</label>
                <input class="form-control" type="text" placeholder="Image URL" name="location[image]">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" placeholder="1234 Main St" name="location[address]">
            </div>                 
            <div class="form-group col-md-5">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" name="location[city]">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="inputState">State</label>
                <select class="form-control" name="location[state]">
                    <option selected value="WA">WA</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" name="location[zip]">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Neighborhood</label>
                <input type="text" class="form-control" placeholder="Neighborhood" name="location[neighborhood]">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Phone #</label>
                <input type="text" class="form-control" placeholder="(206)1234567" name="location[phoneNumber]">
            </div>
       </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Type of Location</label>
                <select class="form-control" name="location[restaurantType]">
                    <option selected value="Restaurant">Restaurant</option>
                    <option value="Food Truck">Food Truck</option>
                    <option value="Brewery">Brewery</option>
                </select>
            </div>
            <div class="form-group col-md-8">
                <label for="inputPassword4">Type of Food</label>
                <input type="text" class="form-control" placeholder="American, Mexican, Chinese, etc." name="location[foodType]">
            </div>
        </div>

        <div class="form-group">
            <label for="inputDescription">Description</label>
            <textarea class="form-control" cols="55" rows="3" name="location[description]"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="">Website</label>
                <input class="form-control" type="text" placeholder="http://example.com" name="location[website]">
            </div>
            <div class="form-group col-md-3">
                <label for="">Menu</label>
                <input class="form-control" type="text" placeholder="http://example.com" name="location[menu]">
            </div>
            <div class="form-group col-md-3">
                <label for="">Yelp</label>
                <input class="form-control" type="text" placeholder="Yelp URL" name="location[yelp]">
            </div>
            <div class="form-group col-md-3">
                <label for="">Kid Friendly</label>
                <select class="form-control" name="location[kids]">
                    <option selected value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>        
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>

    </form>        
</div>









<%- include ('../partials/footer') -%>
