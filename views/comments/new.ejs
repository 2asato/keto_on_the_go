<%- include ('../partials/header') -%>

<div class="container w-75 mt-5">
  <h3 class="raleway font-weight-bold mb-3">
    Comment on <%= location.name %>
  </h3>

  <form action="/locations/<%= location._id %>/comments" method="POST">
    <div class="form-group">
      <textarea
        class="form-control form-control-sm"
        cols="55"
        rows="3"
        placeholder="Comment..."
        name="comment[text]"
        required
      ></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-md btn-default btn-block btn-dark mt-4">
        Submit
      </button>
    </div>
  </form>
  <a class="font-weight-bold" href="/locations">Back</a>
</div>

<%- include ('../partials/footer') -%>
