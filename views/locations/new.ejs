<%- include ('../partials/header') -%>

    <div class="container" id="new-location-form">
        <h1>Add A New Location</h1>
        <form action="/locations" method="POST">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Name *</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Name" name="location[name]" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="">Image *</label>
                    <input class="form-control form-control-sm" type="text" placeholder="Image URL" name="location[image]" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-7">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control form-control-sm" placeholder="1234 Main St" name="location[address]">
                </div>                 
                <div class="form-group col-md-5">
                    <label for="inputCity">City</label>
                    <input type="text" class="form-control form-control-sm" name="location[city]">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputState">State</label>
                    <select class="form-control form-control-sm" name="location[state]">
                        <option selected value="WA">WA</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control form-control-sm" name="location[zip]">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputPassword4">Neighborhood *</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Neighborhood" name="location[neighborhood]" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputPassword4">Phone #</label>
                    <input type="text" class="form-control form-control-sm" placeholder="(206)123-4567" name="location[phoneNumber]">
                </div>
        </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputEmail4">Type of Location</label>
                    <select class="form-control form-control-sm" name="location[restaurantType]">
                        <option selected>Choose one</option>
                        <option value="Restaurant">Restaurant</option>
                        <option value="Food Truck">Food Truck</option>
                        <option value="Brewery">Brewery</option>
                    </select>
                </div>
                <div class="form-group col-md-8">
                    <label for="inputPassword4">Type of Food</label>
                    <input type="text" class="form-control form-control-sm" placeholder="American, Mexican, Chinese, etc." name="location[foodType]">
                </div>
            </div>

            <div class="form-group">
                <label for="inputDescription">Description *</label>
                <textarea class="form-control form-control-sm" cols="55" rows="3" name="location[description]" required></textarea>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="">Website</label>
                    <input class="form-control form-control-sm" type="text" placeholder="http://example.com" name="location[website]">
                </div>
                <div class="form-group col-md-3">
                    <label for="">Menu</label>
                    <input class="form-control form-control-sm" type="text" placeholder="http://example.com" name="location[menu]">
                </div>
                <div class="form-group col-md-3">
                    <label for="">Yelp</label>
                    <input class="form-control form-control-sm" type="text" placeholder="Yelp URL" name="location[yelp]">
                </div>
                <div class="form-group col-md-3">
                    <label for="">Kid Friendly</label>
                    <select class="form-control form-control-sm" name="location[kids]">
                        <option selected>Choose one</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>        
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>        
    </div>

<%- include ('../partials/footer') -%>
